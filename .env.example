# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Environment
ENVIRONMENT=development  # development, staging, production

# SimTradeData API
SIMTRADEDATA_API_URL=https://api.simtradedata.com
SIMTRADEDATA_API_KEY=your_api_key_here

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_ARTIFACT_STORE=s3://simtrademl-artifacts

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/simtrademl
TIMESCALEDB_URL=postgresql://user:password@localhost:5432/timescaledb

# Redis (for Feature Store)
REDIS_URL=redis://localhost:6379/0

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCOUNT_ID=123456789012
ECR_REPOSITORY=simtrademl-inference

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_KEY_SECRET=your_secret_key_here

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json  # json, text

# Model Configuration
MODEL_CACHE_DIR=/tmp/simtrademl/models
DEFAULT_MODEL_VERSION=latest

# Security
SECRET_KEY=your_secret_key_for_jwt
AWS_SECRETS_MANAGER_ARN=arn:aws:secretsmanager:region:account:secret:name

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
